<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false">
		<layer-list>
			<item android:bottom="2dp" android:left="2dp" android:top="2dp" android:right="2dp">
				<shape>
					<gradient android:angle="180" android:endColor="#585858" android:startColor="#585858"/>
					<stroke android:width="2dp" android:color="#585858"/>
					<corners android:radius="10dp"/>
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_pressed="true">
		<layer-list>
			<item android:bottom="2dp" android:left="2dp" android:top="2dp" android:right="2dp">
				<shape>
					<gradient android:angle="180" android:endColor="#585858" android:startColor="#585858"/>
					<stroke android:width="2dp" android:color="#2EFE2E"/>
					<corners android:radius="10dp"/>
				</shape>
			</item>
		</layer-list>
	</item>
</selector>